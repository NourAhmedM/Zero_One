<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">



<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.secrethands.AddSession">
    <TextView
        android:layout_width="match_parent"
        android:textSize="24sp"
        android:text="Please Choose Date:"
        android:background="@color/session_correct_doctor"
        android:textColor="@color/black"
        android:layout_height="wrap_content" />

    <DatePicker
        android:layout_width="match_parent"
        android:id="@+id/datapicker"
        android:layout_height="wrap_content">

    </DatePicker>
    <View
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="4dp"/>

    <TextView
    android:layout_width="match_parent"
    android:textSize="24sp"
    android:text="Please Choose Time:"
    android:background="@color/session_correct_doctor"
    android:textColor="@color/black"
    android:layout_height="wrap_content" />

    <TimePicker
        android:layout_width="match_parent"
        android:id="@+id/timepicker"
        android:layout_height="wrap_content">

    </TimePicker>
    <View
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="4dp"/>
    <TextView
        android:layout_width="match_parent"
        android:textSize="24sp"
        android:text="Please Choose Duration :"
        android:background="@color/session_correct_doctor"
        android:textColor="@color/black"
        android:layout_height="wrap_content" />

    <EditText
    android:layout_width="match_parent"
    android:inputType="number"
    android:maxLength="1"
    android:id="@+id/duration"
    android:hint="Duration"
    android:layout_height="wrap_content" />
    <EditText
        android:layout_width="match_parent"
        android:inputType="number"
        android:maxLength="3"
        android:id="@+id/price"
        android:layout_marginTop="10dp"
        android:hint="Session Price"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="match_parent"
        android:id="@+id/add"
        android:text="ADD"
        android:layout_height="wrap_content" />

</LinearLayout>

</ScrollView>
